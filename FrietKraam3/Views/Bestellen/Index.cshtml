@model FrietKraam3.Models.ViewModel.BestellenViewModel
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor
@using System.Text
@using Newtonsoft.Json
@using Microsoft.AspNetCore.Http


<html>
<body>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Naam</th>
                <th scope="col">Prijs</th>
                <th scope="col">Toevoegen</th>


            </tr>
        </thead>

        <tbody>
            @foreach (var product in Model.Products)
            {
                <tr>
                    <td>
                        @product.ProductName
                    </td>


                    <td>
                        @product.ProductPrice
                    </td>

                    <form asp-action="AddToCart">
                    <td>
                        <button class="btn btn-dark" type="submit"> + </button>
                        <input type="hidden" name="ProductName" value="@product.ProductName" />
                        <input type="hidden" name="ProductPrice" value="@product.ProductPrice" />
                        <input type="hidden" name="ProductId" value="@product.ProductId" />


                    </td>
                    </form>

                </tr>
            }


        </tbody>

    </table>
    <div class="card" style="width: 18rem;">
        <div class=" card-header">
            <h5 class="card-title">Card title</h5>
        </div>
        <div class="card-body">
            @{
                var ProductData = HttpContextAccessor.HttpContext.Session.Get("Cart");
                List<Product> products = null;

                if (ProductData != null)
                {
                    var ProductString = Encoding.UTF8.GetString(ProductData);
                    products = JsonConvert.DeserializeObject<List<Product>>(ProductString);
                }
            }
           @if(products != null && products.Any())
            {
                foreach (var item in products)
                {
                    <p>
                        @item.ProductName
                    </p>
                }
            }

            <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>

        </div>
        <div class="card-footer bg-dark">
            <a href="#" class="btn text-light btn-outline-secondary">Bestellen</a>
        </div>
    </div>


</body>
</html>